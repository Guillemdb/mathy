{
  "min_packer_version": "1.0.4",
  "variables": {
    "project_id": "stop-harassing-staging",
    "zone": "us-central1-a"
  },
  "builders": [
    {
      "type": "googlecompute",
      "image_name": "ml-dojo-img",
      "image_family": "ml-dojo",
      "disk_size": "20",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1804-lts",
      "zone": "{{user `zone`}}",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "ml-dojo-packer-deps.sh",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "ml-dojo-terraform-init",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "init-dev-env",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo cp /tmp/init-dev-env /usr/local/bin/init-dev-env",
        "sudo cp /tmp/ml-dojo-terraform-init /usr/local/bin/ml-dojo-terraform-init",
        "sudo /tmp/ml-dojo-packer-deps.sh"
      ]
    }
  ]
}
