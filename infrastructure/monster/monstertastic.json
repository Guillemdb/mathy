{
  "min_packer_version": "1.0.4",
  "variables": {
    "project_id": "stop-harassing-staging",
    "zone": "us-central1-a"
  },
  "builders": [
    {
      "type": "googlecompute",
      "image_name": "mt-tesla-t4-img",
      "image_family": "mathtastic",
      "disk_size": "20",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1604-lts",
      "zone": "{{user `zone`}}",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "monstertastic-packer-deps.sh",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "monstertastic-boot-script.sh",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "init-dev-env",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo cp /tmp/init-dev-env /usr/local/bin/",
        "sudo cp /tmp/monstertastic-boot-script.sh /usr/local/bin/",
        "sudo /tmp/monstertastic-packer-deps.sh"
      ]
    }
  ]
}
