{
  "min_packer_version": "1.0.4",
  "variables": {
    "project_id": "stop-harassing-staging",
    "zone": "us-central1-a"
  },
  "builders": [
    {
      "type": "googlecompute",
      "image_name": "mt-baby-worker-img",
      "image_family": "mathtastic",
      "disk_size": "20",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1804-lts",
      "zone": "{{user `zone`}}",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    { "type": "file", "source": "mt-packer-deps.sh", "destination": "/tmp/" },
    { "type": "shell", "inline": ["sudo /tmp/mt-packer-deps.sh"] }
  ]
}
